{{!< default}}

<header class="site-header">
    <div>
        <h1>
            {{@blog.title}}
        </h1>
        <h2>
            {{@blog.description}}
        </h2>
    </div>
</header>

{{!-- The main content area --}}
<main class="site-main" role="main">
    <div>
        <div class="post-feed">
            {{#foreach posts}}
                {{> "post-card"}}
            {{/foreach}}
        </div>
        <hr>
    </div>
</main>
